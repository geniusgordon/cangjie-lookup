#!/usr/bin/env node

var chalk = require('chalk');
var decompose = require('../lib/decompose').default;

var argv = require('yargs')
  .check((argv) => {
    if (argv._.length === 0) {
      throw new Error('No string given.');
    }
    return true;
  })
  .usage('Usage: cangjie [string]')
  .version()
  .argv;

var s = argv._.join('');

decompose(s).then((result) => {
  s.split('').forEach((c) => {
    if (result[c]) {
      const output = result[c].map((r) => `${r.code} ` + chalk.dim(`(${r.key})`)).join('\n    ');
      console.log(`${c}: ${output}`);
    }
  });
});

