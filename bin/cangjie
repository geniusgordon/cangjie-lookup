#!/usr/bin/env node

var decompose = require('../lib/decompose').decompose;

var argv = require('optimist')
  .usage('Usage: cangjie -s [string]')
  .demand('s')
  .alias('s', 'string')
  .string('s')
  .describe('s', 'String to decompose')
  .argv;

decompose(argv.s, (err, result) => {
  if (err) {
    throw err;
  }
  argv.s.split('').forEach((c) => {
    if (result[c]) {
      console.log(`${c}: ${result[c]}`);
    }
  });
});

