#!/usr/bin/env node

var decompose = require('../lib/decompose').decompose;

var argv = require('yargs')
  .check((argv) => {
    if (argv._.length === 0) {
      throw new Error('No string given.');
    }
    return true;
  })
  .usage('Usage: cangjie [string]')
  .version()
  .argv;

var s = argv._.join('');

decompose(s, (err, result) => {
  if (err) {
    throw err;
  }
  s.split('').forEach((c) => {
    if (result[c]) {
      console.log(`${c}: ${result[c]}`);
    }
  });
});

